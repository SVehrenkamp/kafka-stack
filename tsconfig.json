{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "incremental": false,
      "module": "commonjs",
      "moduleResolution": "node",
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "outDir": "dist",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "strict": true,
      "target": "es6"
    }
  }